<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:text="صفحة الطفل الشخصية"
            android:textAlignment="center"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/textView26"
            android:layout_width="200dp"
            android:layout_height="23dp"
            android:layout_marginStart="2dp"
            android:layout_marginEnd="256dp"
            android:layout_marginTop="60dp"
            android:layout_below="@+id/textView5"
            android:text="نعم             لا"
            android:textAlignment="center"/>


        <TextView
            android:id="@+id/birthdate"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:layout_marginEnd="2dp"
            android:layout_marginStart="150dp"
            android:layout_marginBottom="600dp"
            android:layout_below="@+id/textView5"
            android:text="تاريخ الميلاد :"
            android:textSize="15dp"
             />


        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="2dp"
            android:layout_marginStart="190dp"
            android:layout_marginBottom="600dp"
            android:layout_alignBaseline="@+id/birthdate"
            android:hint="اختر من التقويم"
           />
        <TextView
            android:id="@+id/age"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="2dp"
            android:layout_marginStart="50dp"
            android:layout_marginBottom="600dp"
            android:layout_alignBaseline="@+id/date"
            android:hint="العمر"
             />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fb"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:clickable="true"
            android:layout_marginStart="120dp"
            android:layout_marginEnd="440dp"
            android:layout_alignBaseline="@+id/birthdate"
            android:layout_marginBottom="100dp"

             />

        <TextView
            android:id="@+id/first"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="100dp"
            android:layout_marginTop="180dp"
            android:hint="السؤال الأول"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
             />

        <TextView
            android:id="@+id/second"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="100dp"
            android:layout_marginTop="230dp"
            android:hint="السؤال الثاني"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/third"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="100dp"
            android:layout_marginTop="280dp"
            android:hint="السؤال الثالث"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/forth"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="100dp"
            android:layout_marginTop="330dp"
            android:hint="السؤال الرابع"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/what"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="60dp"
            android:layout_marginTop="490dp"
            android:layout_marginEnd="44dp"
            android:layout_marginBottom="7dp"
            android:textAlignment="center"
            android:hint="النتيجة"
             />

        <Button
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginTop="250dp"
            android:layout_marginEnd="50dp"
            android:layout_marginBottom="11dp"
            android:layout_below="@+id/textView26"
            android:text="أظهر النتيجة "
            android:textColor="@color/colorPrimary"/>

        <TextView
            android:id="@+id/test"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="170dp"
            android:layout_marginTop="420dp"
            android:layout_marginEnd="44dp"
            android:layout_below="@+id/button"
            android:layout_marginBottom="7dp"
            android:hint="الشهووووور"
            app:layout_constraintTop_toBottomOf="@+id/button" />

        <FrameLayout
            android:id="@+id/container1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"


            />

        <RadioGroup
            android:id="@+id/group1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            >

            <RadioButton
                android:id="@+id/b1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="7dp"
                android:layout_marginTop="170dp"
                android:layout_marginEnd="60dp"
                android:layout_marginBottom="1dp"
                />
            <RadioButton
                android:id="@+id/b11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="60dp"
                android:layout_marginTop="-33dp"
                android:layout_marginEnd="60dp"
                android:layout_marginBottom="1dp"
                />
        </RadioGroup>

        <RadioGroup
            android:id="@+id/group2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/b2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="7dp"
                android:layout_marginTop="220dp"
                android:layout_marginEnd="60dp"
                android:layout_marginBottom="1dp"
                />
            <RadioButton
                android:id="@+id/b22"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="60dp"
                android:layout_marginTop="-33dp"
                android:layout_marginEnd="60dp"
                android:layout_marginBottom="1dp"
                />
        </RadioGroup>

        <RadioGroup
            android:id="@+id/group3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/b3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="7dp"
                android:layout_marginTop="270dp"
                android:layout_marginEnd="60dp"
                android:layout_marginBottom="1dp"
                />
            <RadioButton
                android:id="@+id/b33"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="60dp"
                android:layout_marginTop="-33dp"
                android:layout_marginEnd="60dp"
                android:layout_marginBottom="1dp"
                />
        </RadioGroup>

        <RadioGroup
            android:id="@+id/group4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/b4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="7dp"
                android:layout_marginTop="320dp"
                android:layout_marginEnd="60dp"
                android:layout_marginBottom="1dp"
                />
            <RadioButton
                android:id="@+id/b44"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="60dp"
                android:layout_marginTop="-33dp"
                android:layout_marginEnd="60dp"
                android:layout_marginBottom="1dp"
                />
        </RadioGroup>


    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>